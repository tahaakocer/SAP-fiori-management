<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns="sap.suite.ui.microchart"
    xmlns:layout="sap.ui.layout"
    controllerName="com.solvia.management.controller.Deneme"
>
    <m:Text
        text="Semantic colors in interactive mode"
        class="sapUiSmallMargin"
    >
        <m:layoutData>
            <layout:GridData span="XL12 L12 M12 S12" />
        </m:layoutData>
    </m:Text>
    <m:FlexBox
        width="20rem"
        height="10rem"
        alignItems="Start"
        justifyContent="SpaceBetween"
    >
        <m:items>
            <InteractiveDonutChart selectionChanged="onSelectionChanged">
                <segments>
                    <InteractiveDonutChartSegment
                        label="Implementation Phase"
                        value="40.0"
                        displayedValue="40.0%"
                        color="Error"
                    />
                    <InteractiveDonutChartSegment
                        label="Design Phase"
                        value="21.5"
                        displayedValue="21.5%"
                        color="Critical"
                    />
                    <InteractiveDonutChartSegment
                        label="Test Phase"
                        value="38.5"
                        displayedValue="38.5%"
                        color="Good"
                    />
                </segments>
            </InteractiveDonutChart>
        </m:items>
    </m:FlexBox>

    <m:Text
        text="Semantic colors - Criticality"
        class="sapUiSmallMargin"
    >
        <m:layoutData>
            <layout:GridData span="XL12 L12 M12 S12" />
        </m:layoutData>
    </m:Text>
    <m:FlexBox
        width="22rem"
        height="13rem"
        alignItems="Start"
        justifyContent="SpaceBetween"
    >
        <m:items>
            <InteractiveDonutChart
                selectionChanged="onSelectionChanged"
                displayedSegments="4"
                press="press"
            >
                <segments>
                    <InteractiveDonutChartSegment
                        label="Design Phase"
                        value="45"
                        displayedValue="45.0%"
                    />
                    <InteractiveDonutChartSegment
                        label="Implementation Phase"
                        value="5"
                        displayedValue="5%"
                        color="Critical"
                    />
                    <InteractiveDonutChartSegment
                        label="Test Phase"
                        value="50"
                        displayedValue="50%"
                    />
                </segments>
            </InteractiveDonutChart>
        </m:items>
    </m:FlexBox>

    <m:Text
        text="Semantic colors in non-interactive mode"
        class="sapUiSmallMargin"
    >
        <m:layoutData>
            <layout:GridData span="XL12 L12 M12 S12" />
        </m:layoutData>
    </m:Text>
    <m:FlexBox
        width="22rem"
        height="9rem"
        alignItems="Start"
        justifyContent="SpaceBetween"
    >
        <m:items>
            <InteractiveDonutChart
                selectionChanged="onSelectionChanged"
                displayedSegments="4"
                press="press"
                selectionEnabled="false"
            >
                <segments>
                    <InteractiveDonutChartSegment
                        label="Design Phase"
                        value="32"
                        displayedValue="32.0%"
                        color="Error"
                    />
                    <InteractiveDonutChartSegment
                        label="Implementation Phase"
                        value="28"
                        displayedValue="28%"
                        color="Critical"
                    />
                    <InteractiveDonutChartSegment
                        label="Test Phase"
                        value="25"
                        displayedValue="25%"
                        color="Good"
                    />
                </segments>
            </InteractiveDonutChart>
        </m:items>
    </m:FlexBox>
</mvc:View>
