<mvc:View
    controllerName="com.solvia.management.controller.EditProduct"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page
        title="Product Details"
        showNavButton="true"
        navButtonPress="onPageNavButtonPress"
    >
        <customHeader>
            <Toolbar class="toolbarCenter">
                <content>
                    <Button
                        icon="sap-icon://edit"
                        text="Düzenle"
                        press="onDzenleButtonPress"
                    />
                    <ToolbarSpacer width="34%" />
                    <Title
                        text="Ürün Detayları"
                        level="H1"
                        textAlign="Center"
                        class="title"
                    />
                    <ToolbarSpacer />
                </content>
            </Toolbar>
        </customHeader>

        <content>
            <VBox
                justifyContent="Center"
                alignItems="Center"
                height="100%"
            >
                <f:SimpleForm
                    class="formSimpleForm"
                    layout="ResponsiveGridLayout"
                >
                    <f:content>
                        <VBox
                            class="editAvatarVBox"
                            alignItems="Center"
                        >
                            <Input
                                id="idIdInput"
                                value="{globalModel>/editProduct/Id}"
                                class="editProductInput sapUiMediumMarginBottom"
                                editable="false"
                                visible="false"
                            />

                            <Avatar
                                id="idAvatar"
                                src="{= ${globalModel>/editProduct/Pimage} ? 'data:image/jpeg;base64,' + ${globalModel>/editProduct/Pimage} : ''}"
                                press="onAvatarPress"
                                class="editProductAvatar"
                                badgeIcon="sap-icon://edit"
                            />
                            <u:FileUploader
                                id="idFileUploader"
                                class="hiddenFileUploader"
                                change="onFileUploaderChange"
                            />
                            <Label
                                text="Başlık:"
                                class="editProductLabel"
                            />
                            <Input
                                id="idTitleInput"
                                value="{globalModel>/editProduct/Title}"
                                class="editProductInput"
                                editable="{globalModel>/isEnabled}"
                            />
                        </VBox>

                        <VBox class="editFormVBox">
                            <HBox
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            />

                            <Label
                                text="Açıklama:"
                                class="editProductLabel"
                            />
                            <TextArea
                                id="idDescriptionTextArea"
                                value="{globalModel>/editProduct/Description}"
                                class="editProductInput"
                                rows="4"
                                editable="{globalModel>/isEnabled}"
                            />
                            <HBox
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <Label
                                    text="Fiyat (₺):"
                                    class="editProductLabel"
                                />
                                <Input
                                    id="idPriceInput"
                                    value="{path: 'globalModel>/editProduct/Price', formatter: '.formatter.formatPrice'}"
                                    width="200px"
                                    editable="{globalModel>/isEnabled}"
                                />
                            </HBox>
                            <HBox
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <Label
                                    text="Kategori:"
                                    class="editProductLabel"
                                />
                                <Select
                                    id="idSelect"
                                    selectedKey="{globalModel>/editProduct/Type}"
                                    width="200px"
                                    editable="{globalModel>/isEnabled}"
                                >
                                    <items>
                                        <c:Item
                                            key="1"
                                            text="Teknolojik Eşya"
                                        />
                                        <c:Item
                                            key="2"
                                            text="Beyaz Eşya"
                                        />
                                        <c:Item
                                            key="3"
                                            text="Diğer"
                                        />
                                    </items>
                                </Select>
                            </HBox>
                            <HBox
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <Label
                                    text="Stok Sayısı:"
                                    class="editProductLabel"
                                />
                                <Input
                                    id="idQuantityInput"
                                    value="{globalModel>/editProduct/Quantity}"
                                    width="200px"
                                    editable="{globalModel>/isEnabled}"
                                />
                            </HBox>

                            <HBox
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <Label
                                    text="Üretim Tarihi:"
                                    class="editProductLabel"
                                />
                                <DatePicker
                                    id="idMfcDateDatePicker"
                                    value="{path: 'globalModel>/editProduct/MfcDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'long' }}"
                                    displayFormat="long"
                                    valueFormat="yyyy-MM-dd"
                                    width="200px"
                                    editable="{globalModel>/isEnabled}"
                                />
                            </HBox>

                            <HBox
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <Label
                                    text="Durum:"
                                    class="editProductLabel"
                                />
                                <SegmentedButton
                                    selectedKey="{globalModel>/editProduct/State}"
                                    id="idStateSegmentedButton"
                                    width="200px"
                                    enabled="{globalModel>/isEnabled}"
                                >
                                    <items>
                                        <SegmentedButtonItem
                                            key="1"
                                            text="Mağaza"
                                        />
                                        <SegmentedButtonItem
                                            key="2"
                                            text="Depo"
                                        />
                                        <SegmentedButtonItem
                                            key="3"
                                            text="Yolda"
                                        />
                                    </items>
                                </SegmentedButton>
                            </HBox>
                        </VBox>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>

        <footer>
            <Bar design="Footer">
                <contentLeft>
                    <Button
                        text="Geri Dön"
                        type="Back"
                        press="onGeriDnButtonPress"
                    />
                </contentLeft>

                <contentRight>
                    <Button
                        text="Kaydet"
                        type="Success"
                        press="onKaydetButtonPress"
                    />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
