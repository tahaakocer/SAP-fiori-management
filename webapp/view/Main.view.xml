<mvc:View
    controllerName="com.solvia.management.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
>
    <Page
        id="idPage"
        title="{i18n>title}"
    >
        <content>
            <HBox height="100%">
                <mvc:View
                    viewName="com.solvia.management.view.Aside"
                    type="XML"
                />

                <f:Card
                    class="sapUiMediumMargin"
                    headerPosition="Top"
                    width="300px"
                >
                    <f:header>
                        <card:Header
                            title="Yeni Ürün"
                            subtitle="Yeni bir ürün ekleyin"
                            iconSrc="sap-icon://SAP-icons-TNT/block"
                        />
                    </f:header>

                    <f:content>

                        <Button
                            ariaHasPopup="None"
                            enabled="true"
                            icon="sap-icon://SAP-icons-TNT/data-output-arrow"
                            iconDensityAware="true"
                            iconFirst="true"
                            text="Git"
                            textDirection="RTL"
                            type="Default"
                            width=""
                        >
                            
                        </Button>
                    </f:content>
                </f:Card>
            </HBox>
        </content>
    </Page>
</mvc:View>
