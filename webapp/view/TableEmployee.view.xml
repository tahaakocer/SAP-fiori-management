<mvc:View
    controllerName="com.solvia.management.controller.TableEmployee"
    xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page
        showHeader="false"
        enableScrolling="false"
    >
        <content>
            <HBox height="100%">
                <mvc:View
                    viewName="com.solvia.management.view.Aside"
                    type="XML"
                />
                <t:Table
                    class="customRowHeight"
                    editable="false"
                    enableBusyIndicator="true"
                    selectionBehavior="Row"
                    selectionMode="Single"
                    ariaLabelledBy="title"
                    enableCellFilter="{ui>/cellFilterOn}"
                    rows="{globalModel>/getAllEmployees}"
                >
                    <t:extension>
                        <OverflowToolbar style="Clear">
                            <Title text="Çalışanlar" />
                            <ToolbarSpacer />
                            <ToggleButton
                                icon="sap-icon://grid"
                                tooltip="Enable / Disable Cell Filter Functionality"
                                pressed="{ui>/cellFilterOn}"
                            />
                            <Button
                                icon="sap-icon://decline"
                                tooltip="Clear all filters"
                                press="onButtonClearFiltersPress"
                            />
                            <ToolbarSeparator />
                            <SearchField
                                placeholder="Filter"
                                value="{ui>/globalFilter}"
                                search="onGlobalFilterSearchFieldSearch"
                                width="15rem"
                            />
                        </OverflowToolbar>
                    </t:extension>

                    <t:columns>
                        <t:Column width="5.6rem">
                            <Label text="Profil" />
                            <t:template>
                                <Avatar
                                    src="{= ${globalModel>Pimage} ? 'data:image/jpeg;base64,' + ${globalModel>Pimage} : ''}"
                                    badgeIcon="sap-icon://edit"
                                    press="onAvatarPress"
                                    class="customAvatar"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column
                            width="11rem"
                            filterProperty="Name"
                            defaultFilterOperator="StartsWith"
                        >
                            <Label text="Adı" />
                            <t:template>
                                <Text
                                    text="{globalModel>Name}"
                                    wrapping="false"
                                    class="customText"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="9rem">
                            <Label text="Soyadı" />
                            <t:template>
                                <Text
                                    text="{globalModel>Surname}"
                                    wrapping="false"
                                    class="customText"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="7rem">
                            <Label text="Maaş" />
                            <t:template>
                                <Input
                                    value="{path: 'globalModel>Salary', formatter: '.formatter.formatSalary'}"
                                    editable="false"
                                    class="customText"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="7rem">
                            <Label text="Departman" />
                            <t:template>
                                <Text
                                    text="{path: 'globalModel>Department', formatter: '.formatter.formatDepartment'}"
                                    wrapping="false"
                                    class="customText"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="7.5rem">
                            <Label text="Doğum Tarihi" />
                            <t:template>
                                <Input
                                    type="Datetime"
                                    value="{path: 'globalModel>Birthday', formatter: '.formatter.formatDate'}"
                                    editable="false"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="7.5rem">
                            <Label text="İletişim Bilgileri" />
                            <t:template>
                                <Button
                                    icon="sap-icon://contacts"
                                    type="Emphasized"
                                    text="İletişim"
                                    press="onContactButtonPress"
                                    class="contactButton"
                                />
                            </t:template>
                        </t:Column>
                        <t:Column width="7.5rem">
                            <Label text="Düzenle" />
                            <t:template>
                                <Button
                                    icon="sap-icon://edit"
                                    type="Neutral"
                                    text="Düzenle"
                                    press="onEditButtonPress"
                                    class="contactButton"
                                />
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
                <!-- 
			var oAddEmpData = {
				Name: sName,
				Surname: sSurname,
				Salary: sSalary,
				Department: sDepartment,
				PhoneNumber: sNumber,
				Birthday: sDate,
				Email: sEmail,
				Pimage: this._sFileContent
			}-->
            </HBox>
        </content>
    </Page>
</mvc:View>
